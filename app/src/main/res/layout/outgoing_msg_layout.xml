<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout android:layout_width="0dp"
                                                 android:layout_height="wrap_content"
                                                 android:background="@drawable/outgoing_msg_bubble"
                                                 app:layout_constraintTop_toTopOf="parent"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 app:layout_constraintStart_toStartOf="@+id/guideline4"
                                                 android:layout_marginStart="8dp" android:layout_marginEnd="10dp"
                                                 android:layout_marginTop="15dp">

        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline9"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_percent="0.02
"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="@string/message_test"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="20dp"
                  android:layout_marginTop="10dp" android:id="@+id/textView2"
                  app:layout_constraintStart_toStartOf="@+id/guideline9"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintEnd_toEndOf="@+id/textView2" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>


    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.15"/>

</android.support.constraint.ConstraintLayout>